<nav>
  <ul id="navbar">
    <li class="nav-item"><a class="active" href="#home">Book List</a></li>
    <li class="nav-item" style="float:right"><a href="#sign-up">Sign Up</a></li>
    <li id="sign-in-btn" class="nav-item" style="float:right"><a href="#sign-in" id="sign-in-btn">Sign In</a></li>
  </ul>
</nav>
<div id="wrapper">

  <div id="sign-in" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
      <span class="close">&times;</span>
      <h1>Log in</h1>
      <br>
      <form>
        <input type="text" name="user" placeholder="Username">
        <input type="password" name="pass" placeholder="Password">
        <input type="submit" name="login" class="login login-submit" value="Log in">
      </form>
    </div>

  </div>

  <h1 id="heading">My Reading List</h1>
  <div id="user-input">
    <form id="add-book">
      <input name="book" id="book"></input>
      <input type="submit" value="Read This!"></input>
    </form>
  </div>

  <div id="content">
    <div id="to-read" class="db-items">
      <ul id="read-list">
        {{#each books}}
        {{#unless completed}}
        <li>
          <p class="book listed-book" data-val="{{this}}" title="{{this.author}}">
            <button data-id="{{this.id}}" class="delete-book">&#10060;</button>
            {{this.title}}
            <span class="author">By: {{this.author}}</span>
            <button data-id="{{this.id}}" class="finished-book">&#10003;</button>
          </p>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div id="completed" class="db-items">
      <ul id="finished-list">
        {{#each books}}
        {{#if this.completed}}
        <li>
          <p class="book read-book" data-val="{{this}}" title="{{this.author}}">
            <button data-id="{{this.id}}" class=" delete-book">&#10060;</button>
            {{this.title}}
            <span class="author">{{this.author}}</span>
          </p>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<footer>
  <ul>
    <li><a class="footer-link" href="https://github.com/Gnarwall19">GitHub</a></li>
    <li><a class="footer-link" href="https://www.linkedin.com/in/michael-c-wolfe/">linkedIn</a></li>
    <li><a class="footer-link" href="https://gnarwall19.github.io/michael-wolfe-portfolio/">Portfolio</a></li>
  </ul>
</footer>

<script>
  $(function () {

    // When the user clicks on the button, open the modal 
    $("#sign-in-btn").on('click', function (event) {
      $('.modal').css('display', 'block');
      console.log('click');
    });


    $('.close').on('click', function () {
      $('.modal').css('display', 'none');
    });

    // Not working
    window.onclick = function (event) {
      if (event.target === $('.modal')) {
        $('.modal').css('display', 'none');
      }
    }
  });
</script>